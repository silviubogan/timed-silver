                        Value="{Binding MyNavigateCommand}"/>
                            <Setter Property="CommandParameter"
                        Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=NavigateUri}"/>
                        </Style>
                    </ControlTemplate.Resources>
                    
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                        <AdornerDecorator>
                            <Grid Margin="5,5,5,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!--<Image Source="/Resources/02.10.2018 final.ico" Stretch="Uniform" Height="100"/>-->

                                <TextBlock Grid.Row="1" Style="{StaticResource MyTextBlockStyle}"><Run Text="•"/><Run Text=" "/><Hyperlink NavigateUri="https://github.com/KDE/oxygen-icons"><InlineUIContainer>
                    <Image Source="/Resources/Apps-oxygen-icon.png" Height="16"/>
                </InlineUIContainer><Run Text=" Most icons are from the Oxygen Icon Set"/></Hyperlink></TextBlock>

                                <Button Grid.Row="1" Grid.Column="1" x:Name="BtnLicenseOxygen"
                Content="License"
                Style="{DynamicResource ButtonStyle}"
                />

                                <TextBlock Grid.Row="2" Style="{StaticResource MyTextBlockStyle}"><Run Text="•"/><Run Text=" "/><Hyperlink NavigateUri="https://winsounds.com/windows-7-default-sounds/"><InlineUIContainer>
                    <Image Source="/Resources/windows-7-logo.png" Height="16"/>
                </InlineUIContainer><Run Text=" Default sound (chimes.wav) is from Windows 7's system sounds"/></Hyperlink></TextBlock>

                                <TextBlock Grid.Row="3" Style="{StaticResource MyTextBlockStyle}"><Run Text="•"/><Run Text=" "/><Hyperlink NavigateUri="https://github.com/naudio/NAudio"><InlineUIContainer>
                    <Image Source="/Resources/naudio-logo.png" Height="16"/>
                </InlineUIContainer><Run Text=" MP3 and other audio formats are supported using NAudio"/></Hyperlink></TextBlock>

