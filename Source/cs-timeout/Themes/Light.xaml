             mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ToggleButton/Light.xaml"/>
        <ResourceDictionary Source="RepeatButton/Light.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="AudioMenuItemTemplate" TargetType="{x:Type MenuItem}">
        <Border x:Name="templateRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
            <Grid x:Name="Grid" Margin="-1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="22" SharedSizeGroup="MenuItemIconColumnGroup" Width="Auto"/>
                    <ColumnDefinition Width="13"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition SharedSizeGroup="MenuItemIGTColumnGroup" Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="Icon" Source="{Binding IconSource}" HorizontalAlignment="Center" Height="16" Margin="3" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Width="16"/>
                <Border x:Name="GlyphPanel" BorderBrush="#FF26A0DA" BorderThickness="1" Background="#3D26A0DA" ClipToBounds="False" HorizontalAlignment="Center" Height="22" Margin="-1,0,0,0" Visibility="Hidden" VerticalAlignment="Center" Width="22">
                    <Path x:Name="Glyph" Data="F1M10,1.2L4.7,9.1 4.5,9.1 0,5.2 1.3,3.5 4.3,6.1 8.3,0 10,1.2z" Fill="#FF212121" FlowDirection="LeftToRight" Height="11" Width="10"/>
                </Border>
                <ContentPresenter x:Name="menuHeaderContainer" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{Binding Header}" Grid.Column="2" ContentStringFormat="{TemplateBinding HeaderStringFormat}" ContentSource="Header" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                <Button Grid.Column="6" Name="ToggleButton" Command="local:AudioFileMenuItem.ToggleCommand">
                    <Image Name="MyToggleSoundImage"
                               Source="{Binding Path=Playing, Converter={StaticResource PlayingBoolToBtnIconConv}}"
                               Height="16">
                    </Image>
                </Button>
                <Button Grid.Column="7" Name="OpenButton" Command="local:AudioFileMenuItem.OpenCommand">
                    <Image Name="MyOpenAudioFileImage"
                               Source="/Resources/Oxygen-Icons.org-Oxygen-Actions-document-open.ico"
                               Height="16"/>
                </Button>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <!--<Trigger Property="Icon" Value="{x:Null}">
                    <Setter Property="Visibility" TargetName="Icon" Value="Collapsed"/>
                </Trigger>-->
            <!--<Trigger Property="IsChecked" Value="True">
                    <Setter Property="Visibility" TargetName="GlyphPanel" Value="Visible"/>
                    <Setter Property="Visibility" TargetName="Icon" Value="Collapsed"/>
                </Trigger>-->
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" TargetName="templateRoot" Value="#3D26A0DA"/>
                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FF26A0DA"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="TextElement.Foreground" TargetName="templateRoot" Value="#FF707070"/>
                <Setter Property="Fill" TargetName="Glyph" Value="#FF707070"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsHighlighted" Value="True"/>
                    <Condition Property="IsEnabled" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" TargetName="templateRoot" Value="#0A000000"/>
                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#21000000"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="AudioFileSelectorTemplate" TargetType="local:AudioFileSelector">
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <xtk:SplitButton Name="BtnSetAudio"
                             ToolTip="Click this button to open a dialog in which you can select an audio file to use for all timers.">
                <!-- DropDownButtonToolTip = "Click this button to" +
                " open a list of the most recent 10 used audio files," +
                " where you can click one to use it for all timers."-->
                S_et audio file...
            </xtk:SplitButton>

            <TextBlock Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" Name="LblAudio"
                       ToolTip="This is the currently selected audio file (if it is the case, the default audio is displayed as &quot;Default sound&quot;).">
                Default audio
            </TextBlock>

            <Button Name="BtnPlayPause" MinWidth="25" Grid.Column="2"
                    ToolTip="Use this button to play/pause the selected sound.">
                <Image Source="/Resources/Oxygen-Icons.org-Oxygen-Actions-media-playback-start.ico" Name="ImgPlayPause"/>
            </Button>
            <Button Name="BtnReset" MinWidth="25" Grid.Column="3"
                    ToolTip="Click this button to reset the selected audio file to the default sound (&quot;Default sound&quot;).">
                <Image Source="/Resources/Oxygen-Icons.org-Oxygen-Actions-edit-delete.ico"/>
            </Button>

            <local:DropOverlay Grid.ColumnSpan="4" Visibility="Collapsed" x:Name="MyDropOverlay"/>
        </Grid>
    </ControlTemplate>




    <Style x:Key="AboutWindowButtonStyle" TargetType="{x:Type Button}"
