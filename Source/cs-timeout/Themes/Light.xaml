                            <TabItem Header="File settings">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="10">
                                    <StackPanel Orientation="Vertical">
                                        <ItemsControl Grid.ColumnSpan="3" Margin="0,0,-0.6,0" Grid.Row="0"
                        ItemsSource="{Binding SettingsVMs}" x:Name="PART_MyItemsControl">

                                            <ItemsControl.Resources>
                                                <xtk:InverseBoolConverter x:Key="InverseBooleanConv"/>

