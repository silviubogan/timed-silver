                                                </DataTemplate>

                                                <DataTemplate DataType="{x:Type local:ImageFileSettingDataVM}">
                                                    <local:ImageFileSelector Margin="10" Height="60" FilePath="{Binding EditedValue, Mode=TwoWay}"
